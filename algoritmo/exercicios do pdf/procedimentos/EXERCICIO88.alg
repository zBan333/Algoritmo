algoritmo "Nome do Programa"
var
    procedimento gerador(texto: caractere)
    var
        contador: inteiro
    inicio
        escreval("+-------=======------+ ")
        para contador <- 1 ate 4 passo 1 faca
            escreval(texto)
        fimpara
        escreval("+-------=======------+ ")
    fimprocedimento
inicio
    gerador("Aprendendo Portugol")
fimalgoritmo